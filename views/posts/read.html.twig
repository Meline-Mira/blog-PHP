{{ include('layout/header.html.twig') }}

<div class="mx-auto max-w-2xl py-4 lg:max-w-none">

    <p class="mb-6 text-gray-700 italic">{{ post.summary }}</p>

    <div class="space-y-12 lg:grid lg:grid-cols-3 gap-x-12 lg:space-y-0">
        <div class="group relative">
            <div class="relative h-80 w-full overflow-hidden rounded-lg bg-white sm:aspect-w-2 sm:aspect-h-1 sm:h-80 lg:aspect-w-1 lg:aspect-h-1">
                <img src="{{ post.image_url }}" alt="{{ post.image_description }}" class="h-full w-full object-cover object-center">
            </div>
            <p class="mt-4 text-lg text-gray-700">Auteur : {{ post.first_name }} {{ post.last_name }}</p>
            <p class="text-sm text-gray-700 italic">Dernière modification le {{ post.updated_at|format_datetime('long', 'none', locale='fr') }}</p>
        </div>

        <div class="group relative lg:col-span-2 my-auto text-lg text-gray-700">
            {{ post.content|nl2br }}
        </div>
    </div>
</div>

<div class="mx-auto max-w-2xl py-4 lg:max-w-none">

    <h1 class="text-xl font-bold tracking-tight text-blue-900 underline">Commentaires</h1>

    <div class="space-y-6">
        {% for comment in comments %}
            <div class="group relative bg-blue-100 rounded-lg mt-6 px-5 py-4 text-gray-700">
                <p class="font-bold">{{ comment.first_name }} {{ post.last_name }}</p>
                <p class="my-2 text-sm text-gray-500">Dernière modification le {{ comment.updated_at|format_datetime('long', 'none', locale='fr') }}</p>
                <p>{{ comment.content }}</p>
            </div>
        {% endfor %}
    </div>

{{ include('layout/footer.html.twig') }}
