{{ include('layout/header.html.twig') }}

<div class="mx-auto max-w-2xl py-4 lg:max-w-none">

    <p class="mb-6 text-gray-700 italic">{{ post.summary }}</p>

    <div class="space-y-12 lg:grid lg:grid-cols-3 gap-x-12 lg:space-y-0">
        <div class="group relative">
            <div class="relative h-80 w-full overflow-hidden rounded-lg bg-white sm:aspect-w-2 sm:aspect-h-1 sm:h-80 lg:aspect-w-1 lg:aspect-h-1">
                <img src="{{ post.image_url }}" alt="{{ post.image_description }}" class="h-full w-full object-cover object-center">
            </div>
            <p class="mt-4 text-lg text-gray-700">Auteur : {{ post.first_name }} {{ post.last_name }}</p>
            <p class="text-sm text-gray-700 italic">Derni√®re modification le {{ post.updated_at|format_datetime('long', 'none', locale='fr') }}</p>
        </div>

        <div class="group relative lg:col-span-2 my-auto text-lg text-gray-700">
            {{ post.content|nl2br }}
        </div>
    </div>
</div>

<div class="mx-auto max-w-2xl py-4 lg:max-w-none">

    <h1 class="mb-6 text-xl font-bold tracking-tight text-blue-900 underline">Commentaires</h1>

    <div class="space-y-6">
        {% if comments_number > 5 %}
        <button type="button" id="comment-button" class="inline-flex items-center justify-center rounded-md bg-blue-800 p-2 text-blue-600 hover:bg-blue-100 focus:outline-none focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800" aria-controls="comments-display" aria-expanded="false">
            <span class="sr-only">Lister tous les commentaires</span>
            <!-- Menu open: "hidden", Menu closed: "block" -->
            <svg class="comment-button block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 4.5h14.25M3 9h9.75M3 13.5h9.75m4.5-4.5v12m0 0l-3.75-3.75M17.25 21L21 17.25" />
            </svg>

            <!-- Menu open: "block", Menu closed: "hidden" -->
            <svg class="comment-button hidden h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 4.5h14.25M3 9h9.75M3 13.5h9.75m4.5-4.5v12m0 0l-3.75-3.75M17.25 21L21 17.25" />
            </svg>
        </button>

        <div class="hidden" id="comments-display">
            {% for comment in comments %}
                {% if loop.index <= comments_number - 5 %}
                    {{ include('partials/comments/comments-layout.html.twig') }}
                {% endif %}
            {% endfor %}
        </div>
        {% endif %}

        {% for comment in comments %}
            {% if loop.index > comments_number - 5 %}
                {{ include('partials/comments/comments-layout.html.twig') }}
            {% endif %}
        {% endfor %}
    </div>

{{ include('layout/footer.html.twig') }}
