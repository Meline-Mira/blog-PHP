{{ include('layout/header.html.twig') }}

<div class="mx-auto max-w-2xl py-4 lg:max-w-none">
    <div class="mt-4">
        <div class="group relative bg-blue-100 rounded-lg px-5 py-4 mb-6 text-gray-700">
            {{ post.title }}
            <div class="border-t mt-2 border-blue-200">
                {{ post.summary }}
            </div>
        </div>

        <form method="POST" class="relative mb-6">
            <input type="hidden" name="_method" value="DELETE" />
            <input type="hidden" id="id_post" name="id_post" value="{{ post.id }}">
            <div class="p-4 bg-white text-center overflow-hidden rounded-lg border border-red-600 shadow-sm focus-within:border-red-500 focus-within:ring-1 focus-within:ring-red-500">
                Êtes-vous sûr de vouloir supprimer ce blog post ?
            </div>

            <div>
                <div class="flex items-center justify-start space-x-3 border-t border-blue-100 px-2 py-2 sm:px-3">
                    <div class="flex-shrink-0">
                        <button type="submit" class="inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-800">Supprimer</button>
                    </div>

                    <div>
                        <a href="/posts/read?id={{ post.id }}&current_page={{ current_page }}" class="inline-flex items-center rounded-md bg-blue-800 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-blue-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-800">Annuler</a>
                    </div>
                </div>
            </div>
        </form>
    </div>

{{ include('layout/footer.html.twig') }}